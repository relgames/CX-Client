<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView android:text="@string/game.info.number" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameName" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.type" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameType" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.dateStart" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameStart" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.dateStop" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameStop" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.price" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gamePrice" android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:src="@android:drawable/divider_horizontal_dark" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" android:paddingBottom="2dp" android:paddingTop="2dp"/>

    <TextView android:text="@string/game.info.zone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/gameZone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
